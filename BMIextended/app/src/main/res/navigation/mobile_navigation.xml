<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_bmi">

    <fragment
        android:id="@+id/navigation_bmi"
        android:name="com.example.bmiextended.ui.bmi.BmiFragment"
        android:label="BMI Calculator"
        tools:layout="@layout/fragment_bmi" />

    <fragment
        android:id="@+id/navigation_kcal"
        android:name="com.example.bmiextended.ui.kcal.KcalFragment"
        android:label="@string/title_kcal"
        tools:layout="@layout/fragment_kcal" />

    <fragment
        android:id="@+id/navigation_recipes"
        android:name="com.example.bmiextended.ui.recipe.RecipeFragment"
        android:label="@string/title_recipes"
        tools:layout="@layout/fragment_recipe" />

    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="com.example.bmiextended.ui.shoppingList.ShoppingListFragment"
        android:label="@string/lista_zakup_w"
        tools:layout="@layout/fragment_shopping_list" />

    <fragment
        android:id="@+id/navigation_bmi_chart"
        android:name="com.example.bmiextended.ui.chart.BmiChartFragment"
        android:label="Historia BMI"
        tools:layout="@layout/fragment_bmi_chart" />
